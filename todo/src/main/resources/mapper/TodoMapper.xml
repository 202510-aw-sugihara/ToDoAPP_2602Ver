<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.todo.TodoMapper">
  <resultMap id="TodoResultMap" type="com.example.todo.Todo">
    <id column="id" property="id"/>
    <result column="author" property="author"/>
    <result column="title" property="title"/>
    <result column="description" property="description"/>
    <result column="due_date" property="dueDate"/>
    <result column="priority" property="priority"/>
    <result column="completed" property="completed"/>
    <result column="deleted_at" property="deletedAt"/>
    <result column="created_at" property="createdAt"/>
    <result column="updated_at" property="updatedAt"/>
    <result column="version" property="version"/>
    <association property="user" javaType="com.example.todo.AppUser">
      <id column="user_id" property="id"/>
    </association>
    <association property="category" javaType="com.example.todo.Category">
      <id column="category_id" property="id"/>
      <result column="category_name" property="name"/>
      <result column="category_color" property="color"/>
    </association>
  </resultMap>

  <select id="search" parameterType="map" resultMap="TodoResultMap">
    SELECT DISTINCT
      t.id,
      t.author,
      t.title,
      t.description,
      t.due_date,
      t.priority,
      t.completed,
      t.deleted_at,
      t.created_at,
      t.updated_at,
      t.version,
      t.user_id,
      t.category_id,
      c.name AS category_name,
      c.color AS category_color
    FROM todos t
    LEFT JOIN categories c ON c.id = t.category_id
    LEFT JOIN todo_groups tg ON tg.todo_id = t.id
    <where>
      AND t.deleted_at IS NULL
      <if test="userId != null">
        AND t.user_id = #{userId}
      </if>
      <if test="keyword != null and keyword != ''">
        AND t.title LIKE CONCAT('%', #{keyword}, '%')
      </if>
      <if test="categoryId != null">
        AND t.category_id = #{categoryId}
      </if>
      <if test="groupIds != null and groupIds.size > 0">
        AND tg.group_id IN
        <foreach collection="groupIds" item="gid" open="(" separator="," close=")">
          #{gid}
        </foreach>
      </if>
    </where>
    <choose>
      <when test="sort == 'createdAt'">ORDER BY t.created_at</when>
      <when test="sort == 'title'">ORDER BY t.title</when>
      <when test="sort == 'dueDate'">ORDER BY t.due_date</when>
      <when test="sort == 'completed'">ORDER BY t.completed</when>
      <otherwise>ORDER BY t.created_at</otherwise>
    </choose>
    <choose>
      <when test="direction == 'asc'">ASC</when>
      <otherwise>DESC</otherwise>
    </choose>
    LIMIT #{limit} OFFSET #{offset}
  </select>

  <select id="count" parameterType="map" resultType="long">
    SELECT COUNT(DISTINCT t.id)
    FROM todos t
    LEFT JOIN todo_groups tg ON tg.todo_id = t.id
    <where>
      AND t.deleted_at IS NULL
      <if test="userId != null">
        AND t.user_id = #{userId}
      </if>
      <if test="keyword != null and keyword != ''">
        AND t.title LIKE CONCAT('%', #{keyword}, '%')
      </if>
      <if test="categoryId != null">
        AND t.category_id = #{categoryId}
      </if>
      <if test="groupIds != null and groupIds.size > 0">
        AND tg.group_id IN
        <foreach collection="groupIds" item="gid" open="(" separator="," close=")">
          #{gid}
        </foreach>
      </if>
    </where>
  </select>

  <delete id="deleteByIds" parameterType="map">
    UPDATE todos
    SET deleted_at = CURRENT_TIMESTAMP
    WHERE deleted_at IS NULL
    AND id IN
    <foreach collection="ids" item="id" open="(" separator="," close=")">
      #{id}
    </foreach>
    <if test="userId != null">
      AND user_id = #{userId}
    </if>
  </delete>
</mapper>
